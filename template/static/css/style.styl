@import('nib')

global-reset()

html,
body
  width 100%
  height 100%
  font-family monospace

body
  position relative
  background #1d060a
	color #b1103c

#haiku
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  max-width 100%
  text-align center
  img
    margin 0 auto
    border none
    max-width 100%
    height auto
